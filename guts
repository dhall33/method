//Calculates average for up to 4 set doubleegers

public class method {

public static void main(String[]strArgs) {

double num1 = 1;
double num2 = 2;
double num3 = 3;
double num4 = 4;

  public double average (double num1, double num2){
        return ((num1+num2) / 2.0);
     }

public double average (double num1, double num2, double num3) {
   return ((num1+num2+num3) / 3.0);
   }
 
 public double average (double num1, double num2, double num3,                       
   double num4){
      return ((num1+num2+num3+num4) / 4.0);
   }
 }

   
 
